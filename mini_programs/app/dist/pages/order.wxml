
  <view class="container">

    <view  wx:if="{{!userCheck}}" class="tips-login-needed">

      <view>
        <image id="loginBtn" src="{{loginImg}}" bindtap="handle2Login"/>
      </view>
      <view>
        <icon style="position: relative; top: 6rpx; margin-right: 16rpx;" type="info" size="16"/><text>您还未登录</text>
      </view>

    </view>

    
    <view class="toolbar"  wx:if="{{userCheck}}">
      <view wx:for="{{toolbars}}" class="toolbar-item {{item.checked ? 'active' : ''}}" wx:key="toolbar-item-{{idx}}" bindtap="handleToolbarChange" data-wpyhandletoolbarchange-a="{{item}}">
        <text>{{item.label}}</text>
      </view>
    </view>

    <scroll-view class="main" wx:if="{{userCheck}}" bindscrolltolower="handleLoadMore">

    </scroll-view>

  </view>