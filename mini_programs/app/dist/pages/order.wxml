
  <view class="container">

    <view  wx:if="{{!userCheck}}" class="tips-login-needed">

      <view>
        <image id="loginBtn" src="{{loginImg}}" bindtap="handle2Login"/>
      </view>
      <view>
        <icon style="position: relative; top: 6rpx; margin-right: 16rpx;" type="info" size="16"/><text>您还未登录</text>
      </view>

    </view>

    
    <view class="toolbar"  wx:if="{{userCheck}}">
      <view wx:for="{{toolbars}}" class="toolbar-item {{item.checked ? 'active' : ''}}" wx:key="toolbar-item-{{idx}}" bindtap="handleToolbarChange" data-wpyhandletoolbarchange-a="{{item}}">
        <text>{{item.label}}</text>
      </view>
    </view>

    <scroll-view class="orders" scroll-y wx:if="{{userCheck}}" bindscrolltolower="handleLoadMore">
      <view wx:for="{{orders}}" wx:key="orders-item-{{idx}}" class="orders-item">
        <view class="orders-item-top">
          <view class="orders-item-name">
            <image src="{{item.avatar}}"/>
            <text>{{item.businessName}}></text>
          </view>
          <text class="orders-item-status" data-status="{{item.status}}">{{item.statusValue}}</text>
        </view>
        <view class="orders-item-details">

          <view class="orders-item-details-row" wx:for="{{item.details}}" wx:for-index="sidx" wx:for-item="sitem" wx:key="orders-item-details-row-{{sidx}}">

            <text>{{sitem.name}}</text>
            <text>x{{sitem.counts}}</text>

          </view>

        </view>
        <view class="orders-item-action">
          <button wx:if="{{item.status === 0}}" class="btn-pay" bindtap="handlePayOrder" data-wpyhandlepayorder-a="{{item}}">支付</button>
          <button wx:if="{{item.status === 0 || item.status === 1}}" class="btn-cancel" bindtap="handleCancelOrder" type="warn" data-wpyhandlecancelorder-a="{{item}}">取消</button>
          <button wx:if="{{item.status === 1}}" type="primary" class="btn-finish" bindtap="handleFinishOrder" data-wpyhandlefinishorder-a="{{item}}">完成</button>
        </view>

      </view>

      
  <view class="loadmore">
    <text  wx:if="{{$LoadMore$hasMore && $LoadMore$loadingMore}}">加载中...</text>
    <text  wx:if="{{$LoadMore$hasMore && !$LoadMore$loadingMore}}">上拉加载更多</text>
    <text wx:if="{{!$LoadMore$hasMore}}">没有啦~(￣▽￣)"~</text>
  </view>


    </scroll-view>

  </view>